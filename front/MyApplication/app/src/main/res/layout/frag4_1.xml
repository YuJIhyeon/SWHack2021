<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="33dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:text=""
            android:layout_centerVertical="true"
            app:backgroundTint="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="GaraSadae"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:text="가라사대"
                android:textSize="19sp"
                android:textColor="#0F84F7"/>


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/profile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userID"
            android:textSize="24sp"
            style="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가라사대"
                android:textSize="22sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@mipmap/serobar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가라사대"
                android:textSize="22sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@mipmap/serobar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가라사대"
                android:textSize="22sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/te1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="22sp"
        android:textColor="#606060"
        android:background="#FFFFFF"/>
    <LinearLayout
        android:id="@+id/menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:paddingTop="13dp"
        android:paddingBottom="20dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가라사대"
            android:textSize="20sp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/serobar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요"
            android:textSize="20sp"
            android:textColor="#0F84F7"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/garalist01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="위인"
                android:lines="1"
                android:paddingTop="1dp"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal|center"
                android:textSize="22sp"
                android:background="#FFFFFF"/>


            <TextView
                android:id="@+id/garalist02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:lines="1"
                android:textSize="22sp"
                android:paddingTop="5dp"
                android:gravity="center_horizontal|center"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:text="게임" />

            <TextView
                android:id="@+id/garalist03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영화"
                android:textSize="22sp"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:lines="1"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/garalist04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="만화"
                android:textSize="22sp"
                android:gravity="center_horizontal|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:lines="1"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/garalist05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_horizontal|center"
                android:text="게임"
                android:lines="1"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/garalist06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textSize="22sp"
                android:gravity="center_horizontal|center"
                android:paddingTop="5dp"
                android:paddingBottom="1dp"
                android:text="애니"
                android:lines="1"
                android:background="#FFFFFF"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>